extends layout

include _includes/sharedHTMLfunctions
block content
  #banner.page-header
    .col-lg-6
      h1= pageHeader.title
      strong #{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-9
      .row.list-group
        each item in locations  
          .list-group-item
            h4
              a(href = "/location")= item.name
              small &nbsp;
                +outputRating(item.rating)
              span.badge.float-right.badge-dark= item.distance
            p.address= item.address
            p
              each facility in item.facilities
                span.badge.badge-info= facility
                small &nbsp;
    .col-xs-12.col-sm-3
      p.lead #{sidenote}      


